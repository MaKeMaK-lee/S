@model IEnumerable<OOP_L_4_L_5.Storage.Entity.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Каталог Товаров</title>
    <style>
        a {
            text-decoration: none;
            color: black;
        }

        .textleft {
            text-align: left;
        }

        body {
            margin: auto;
            background-color: bisque;
            align-content: center;
            align-items: center;
        }
        .cursorhand {
            cursor: pointer;
        }

        .unselectable {
            -moz-user-select: none;
            -webkit-user-select: none;
            user-select: none;
        }
        h1 {
            font-size: 37px;
            color: saddlebrown;
        }

        .default {
            align-self: center;
            text-align: center;
            align-content: center;
        }

        table {
            max-width: 75%;
            margin: auto;
            border: 2px double darkred;
            background-color: darkseagreen;
            border-spacing: 3px;
        }

        .tableIn {
            max-width: 99%;
            margin: auto;
            border: 0px;
            background-color: rgba(0, 0, 0, 0.00);
            border-spacing: 1px;
        }

        .headtablebuttons {
            max-width: 80%;
            margin: auto;
            border: none;
            background-color: rgba(0,0,0,0);
        }

        .trheader {
            border: 2px double rgba(0, 0, 0, 0.70);
        }

        th {
            padding: 3px;
            font-size: 24px;
            border: 1px groove rgba(0, 0, 0, 0.70);
        }

        td {
            padding: 2px;
            font-size: 20px;
            border: 1px groove rgba(0, 0, 0, 0.70);
        }

        .input {
            font-size: 28px;
            min-height: 30px;
            min-width: 200px;
            border: 3px outset black;
            background-color: rgba(0, 0, 0, 0.37);
            font-family: Impact;
        }

        .searchinput {
            margin: 1px;
            font-size: 24px;
            min-width: 110px;
            border: 1px outset black;
            background-color: rgba(0, 0, 0, 0.15);
            font-family: Calibri;
        }

        .searchinputcheckbox {
            border: 1px outset black;
            background-color: rgba(0, 0, 0, 0.15);
            font-family: Calibri;
        }

        .tdHEAD {
            color: black;
            padding: 3px;
            font-size: 24px;
            border: 3px ridge rgba(0, 0, 0, 0.10);
            background: rgba(255, 252, 198, 0.27);
        }

        .tableHEAD {
            background: rgba(0, 0, 0, 0.00);
            margin: auto;
            border-spacing: 3px;
            border: 0px;
        }

        .HEAD {
            padding: 3px;
            background-color: rgba(40, 6, 0, 0.50);
        }

        .warningmessage {
            max-width: 80%;
            text-align: center;
            align-self: center;
            margin: auto;
            color: darkred;
            font-size: 30px;
            font-weight: bold;
            border: 7px double black;
        }

        .noborder {
            border: 0px;
        }
    </style>
    <script type="text/javascript">
        function deleteThat() {
            return confirm("Bы уверены, что хотите удалить это?");
        }
    </script>
</head>
<body>
    <div class="HEAD">
        <table class="tableHEAD">
            <tr>
                <td class="tdHEAD">
                    <a href="/Anime/AnimeCatalog">аниме</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Book/BookCatalog">книги</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Figure/FigureCatalog">фигурки</a>
                </td>
                <td class="tdHEAD">
                    <a href="/PaymentInfo/PaymentInfoCatalog">платёжные данные</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Client/ClientCatalog">клиенты</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Product/ProductCatalog">товары</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Order/OrderCatalog">заказы</a>
                </td>
            </tr>
        </table>
    </div>
    <h1 class="default">
        Каталог Товаров
    </h1>
    <table class="headtablebuttons">
        <tr>
            <td>
                @using (Html.BeginForm("CreateProduct", "Product"))
                {
                    <input class="input cursorhand" type="submit" value="Добавить Товар" />
                }
            </td>
            @using (Html.BeginForm("ProductCatalog", "Product", FormMethod.Get))
            {
                <td>
                    <input class="searchinput" type="search" maxlength="15" placeholder="Минимум в наличии..." name="SearchMinCountInStock" />
                </td>
                <td class="textleft">
                    <label class="unselectable cursorhand"><input class="searchinputcheckbox" type="checkbox" checked name="SearchProductType" value="Anime" />Аниме</label>
                    <label class="unselectable cursorhand"><input class="searchinputcheckbox" type="checkbox" checked name="SearchProductType" value="Book" />Книга</label>
                    <label class="unselectable cursorhand"><input class="searchinputcheckbox" type="checkbox" checked name="SearchProductType" value="Figure" />Фигурка<br /></label>
                </td>
                <td>
                    <input class="searchinput" type="search" maxlength="15" placeholder="Мин. цена" name="SearchMinPrice" />
                </td>
                <td>
                    <input class="searchinput" type="search" maxlength="15" placeholder="Макс. цена" name="SearchMaxPrice" />
                </td>
                <td style="min-width:40px; max-width:50px;">
                    <input class="searchinput cursorhand" type="submit" style="min-width:initial; max-width:initial;" value="🔎" />
                </td>
            }
        </tr>
    </table>

    @if (Model.Count() > 0)
    {
        <div class="default">
            <table>
                <thead>
                    <tr>
                        <th>
                            Артикул
                        </th>
                        <th>
                            Продукция
                        </th>
                        <th>
                            Тип продукции
                        </th>
                        <th>
                            Цена, руб
                        </th>
                        <th>
                            В наличии
                        </th>
                        <th>
                            🛠
                        </th>
                    </tr>
                </thead>
                @foreach (var m in Model)
                {
                    <tr class="trheader">
                        <td>
                            <label title="@m.Id">📜</label>
                        </td>
                        <td>
                            @if (m.MatterId != Guid.Empty)
                            {
                                <table class="tableIn" style="min-width:98%">
                                    @if (m.ProductType == OOP_L_4_L_5.Storage.ProductTypes.Anime)
                                    {
                                        <tr style="text-align:right;">
                                            <td class="noborder">@m.Anime.Name<br />@m.Anime.Studio, @m.Anime.Date.ToLongDateString() - @m.Anime.AnimeType</td>
                                            <td style="width:20%; min-width:110px; text-align:center;" class="noborder">@m.Anime.Genre<br />@(Convert.ToString(m.Anime.EpisodesCount) + " еп.")</td>
                                        </tr>
                                    }
                                    @if (m.ProductType == OOP_L_4_L_5.Storage.ProductTypes.Book)
                                    {
                                        <tr style="text-align:right;">
                                            <td class="noborder">@m.Book.Name<br />@m.Book.Author, @m.Book.Date.ToLongDateString() - @m.Book.BookType</td>
                                            <td style="width:20%; min-width:110px; text-align:center;" class="noborder">@m.Book.Genre<br />@(Convert.ToString(m.Book.PageCount) + " стр.")</td>
                                        </tr>
                                    }
                                    @if (m.ProductType == OOP_L_4_L_5.Storage.ProductTypes.Figure)
                                    {
                                        <tr style="text-align:right;">
                                            <td class="noborder">@m.Figure.Name<br />@m.Figure.Source</td>
                                            <td style="width:20%; min-width:110px; text-align:center;" class="noborder" style="min-width:64px;">[1 : @m.Figure.Scale]<br />@(Convert.ToString(m.Figure.Weight) + " гр.")</td>
                                        </tr>
                                    }
                                </table>
                            }
                            else
                            {
                                <span style="font-style:italic">[не назначено]</span>
                            }
                            @*<details>
                                    <summary>Содержится в заказах</summary>
                                </details>*@
                        </td>
                        <td>
                            @if (m.MatterId != Guid.Empty)
                            {
                                <span>@(m.ProductType == OOP_L_4_L_5.Storage.ProductTypes.Anime ? "Аниме" : (m.ProductType == OOP_L_4_L_5.Storage.ProductTypes.Book ? "Книга" : "Фигурка"))</span>
                            }
                            else
                            {
                                <span style="font-style:italic">[не определён]</span>
                            }
                        </td>
                        <td>
                            @m.Price
                        </td>
                        <td>
                            @(m.CountInStock < 1 ? "Нет" : m.CountInStock + " шт.")
                        </td>
                        <td style="min-width:64px;">
                            <a href="/Product/UpdateProduct/@m.Id">✎</a> <a onclick="return deleteThat();" href="/Product/DeleteProduct/@m.Id">🗑</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <div class="warningmessage">
            Тутачки ныне пусто!
        </div>
    }
</body>
</html>
