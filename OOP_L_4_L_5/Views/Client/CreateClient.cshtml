
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        a {
            text-decoration: none;
            color: black;
        }
        .textleft {
            text-align: left;
        }
        .cursorhand {
            cursor: pointer;
        }

        .unselectable {
            -moz-user-select: none;
            -webkit-user-select: none;
            user-select: none;
        }
        body {
            margin: auto;
            max-width: 1000px;
            background-color: bisque;
            align-content: center;
            align-items: center;
        }

        h1 {
            font-size: 37px;
            color: saddlebrown;
        }

        .default {
            align-self: center;
            text-align: center;
            align-content: center;
        }

        table {
            margin: auto;
            border: 2px double darkred;
        }

        th {
            font-size: 24px;
            min-width: 200px;
            max-width: 500px;
            border: 5px thin black;
        }

        td {
            font-size: 24px;
            min-width: 200px;
            max-width: 960px;
            border: 1px thin black;
        }

        tr {
            border: 2px double darkred;
        }

        .input {
            padding: 2px;
            margin-top: 3px;
            font-size: 28px;
            min-height: 30px;
            min-width: 200px;
            border: 3px outset darkred;
            background-color: rgba(255, 255, 255, 0.37);
            font-family: Impact;
        }

        .warningmessage {
            text-align: center;
            align-self: center;
            margin: auto;
            color: darkred;
            font-size: 30px;
            font-weight: bold;
            border: 7px double black;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="~/Views/Client/StyleSheet111.css">
    <meta name="viewport" content="width=device-width" />
    <title>Добавить Клиента</title>
</head>
<body>
    <h1 class="default">
        Добавить Клиента
    </h1>
    <div class="default">
        @using (Html.BeginForm("Create", "Client", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>
                        Имя
                    </td>
                    <td>
                        <input type="text" maxlength="100" name="Name" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Телефон
                    </td>
                    <td>
                        <input type="tel" maxlength="12" name="Telephone" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Адрес эл. почты
                    </td>
                    <td>
                        <input type="email" maxlength="100" name="Email" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <span style="font-style:italic;font-size:24px;">Платёжные данные вы<br/>можете добавить позднее</span>
                    </td>
                </tr>
            </table>
            <div>
                <a class="input a" href="/Client/ClientCatalog">Отмена</a>   <input class="input cursorhand" type="submit" value="Добавить" />
            </div>
        }
    </div>

</body>
</html>
