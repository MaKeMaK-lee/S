
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        a {
            text-decoration: none;
            color: black;
        }
        .textleft {
            text-align: left;
        }
        .cursorhand {
            cursor: pointer;
        }

        .unselectable {
            -moz-user-select: none;
            -webkit-user-select: none;
            user-select: none;
        }
        body {
            margin: auto;
            max-width: 1000px;
            background-color: bisque;
            align-content: center;
            align-items: center;
        }

        h1 {
            font-size: 37px;
            color: saddlebrown;
        }

        .default {
            align-self: center;
            text-align: center;
            align-content: center;
        }

        table {
            margin: auto;
            border: 2px double darkred;
        }

        th {
            font-size: 24px;
            min-width: 200px;
            max-width: 500px;
            border: 5px thin black;
        }

        td {
            font-size: 24px;
            min-width: 200px;
            max-width: 960px;
            border: 1px thin black;
        }

        tr {
            border: 2px double darkred;
        }

        .input {
            padding: 2px;
            margin-top: 3px;
            font-size: 28px;
            min-height: 30px;
            min-width: 200px;
            border: 3px outset darkred;
            background-color: rgba(255, 255, 255, 0.37);
            font-family: Impact;
        }

        .warningmessage {
            text-align: center;
            align-self: center;
            margin: auto;
            color: darkred;
            font-size: 30px;
            font-weight: bold;
            border: 7px double black;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Добавить Фигурку</title>
</head>
<body>
    <h1 class="default">
        Добавить Фигурку
    </h1>
    <div class="default">
       @using (Html.BeginForm("Create", "Figure", FormMethod.Post))
        {
        <table>
            <tr>
                <td>
                    Наименование
                </td>
                <td>
                    <input type="text" maxlength="500" name="Name" />
                </td>
            </tr>
            <tr>
                <td>
                    Источник
                </td>
                <td>
                    <input type="text" maxlength="500" name="Source" />
                </td>
            </tr>
            <tr>
                <td>
                    Масштаб 1 : Х
                </td>
                <td>
                    <input type="number" max="100001" name="Scale" />
                </td>
            </tr>
            <tr>
                <td>
                    Вес, грамм
                </td>
                <td>
                    <input type="number" max="100001" name="Weight" />
                </td>
            </tr>
        </table>
            <div>
                <a class="input" href="/Figure/FigureCatalog">Отмена</a>   <input class="input cursorhand" type="submit" value="Добавить" />
            </div>
        }
    </div>

</body>
</html>
