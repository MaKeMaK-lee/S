@model OOP_L_4_L_5.Storage.ErrorPageModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ошибка?</title>
    <style>
        a {
            text-decoration: none;
            color: black;
        }

        .textleft {
            text-align: left;
        }

        body {
            margin: auto;
            background-color: bisque;
            align-content: center;
            align-items: center;
        }

        h1 {
            font-size: 37px;
            color: saddlebrown;
        }

        .default {
            align-self: center;
            text-align: center;
            align-content: center;
        }

        table {
            max-width: 75%;
            margin: auto;
            border: 2px double darkred;
            background-color: darkseagreen;
            border-spacing: 3px;
        }

        .headtablebuttons {
            max-width: 80%;
            margin: auto;
            border: none;
            background-color: rgba(0,0,0,0);
        }

        .trheader {
            border: 2px double rgba(0, 0, 0, 0.70);
        }

        th {
            padding: 3px;
            font-size: 24px;
            border: 1px groove rgba(0, 0, 0, 0.70);
        }

        td {
            padding: 2px;
            font-size: 20px;
            border: 1px groove rgba(0, 0, 0, 0.70);
        }

        .input {
            font-size: 28px;
            min-height: 30px;
            min-width: 200px;
            border: 3px outset black;
            background-color: rgba(0, 0, 0, 0.37);
            font-family: Impact;
        }

        .searchinput {
            margin: 1px;
            font-size: 24px;
            min-width: 110px;
            border: 1px outset black;
            background-color: rgba(0, 0, 0, 0.15);
            font-family: Calibri;
        }

        .searchinputcheckbox {
            border: 1px outset black;
            background-color: rgba(0, 0, 0, 0.15);
            font-family: Calibri;
        }

        .cursorhand {
            cursor: pointer;
        }

        .unselectable {
            -moz-user-select: none;
            -webkit-user-select: none;
            user-select: none;
        }

        .tdHEAD {
            color: black;
            padding: 3px;
            font-size: 24px;
            border: 3px ridge rgba(0, 0, 0, 0.10);
            background: rgba(255, 252, 198, 0.27);
        }

        .tableHEAD {
            background: rgba(0, 0, 0, 0.00);
            margin: auto;
            border-spacing: 3px;
            border: 0px;
        }

        .HEAD {
            padding: 3px;
            background-color: rgba(40, 6, 0, 0.50);
        }

        .warningmessage {
            max-width: 80%;
            text-align: center;
            align-self: center;
            margin: auto;
            color: darkred;
            font-size: 30px;
            font-weight: bold;
            border: 7px double black;
        }
    </style>
</head>
<body>
    <div class="HEAD">
        <table class="tableHEAD">
            <tr>
                <td class="tdHEAD">
                    <a href="/Anime/AnimeCatalog">аниме</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Book/BookCatalog">книги</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Figure/FigureCatalog">фигурки</a>
                </td>
                <td class="tdHEAD">
                    <a href="/PaymentInfo/PaymentInfoCatalog">платёжные данные</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Client/ClientCatalog">клиенты</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Product/ProductCatalog">товары</a>
                </td>
                <td class="tdHEAD">
                    <a href="/Order/OrderCatalog">заказы</a>
                </td>
            </tr>
        </table>
    </div>
    <h1 class="default" style="font-size:50px; color:darkred;">
        Тутачки возникла какая-то ошибка!
    </h1>
    <h2 class="default" style="font-size:35px; color:rgb(29, 0, 0);">
        @{bool isNeedToWriteMore = true; }
        @switch (Model.Exception.GetType().ToString())
        {
            case (("System.DivideByZeroException")):
                <span>Деление на нуллль</span>
                break;
            default:
                isNeedToWriteMore = false;
                <span>@Model.Exception.Message</span>
                break;
        }
    </h2>
    <div class="default" style="font-size:35px; color:rgb(62, 39, 1);">
        <a href="@Model.BackPath">[<span style="font-style:italic;">Вертать в зад</span>]</a><br /><br />
        <span>
            @(isNeedToWriteMore? Model.Exception.Message :"")
        </span>
    </div>
</body>
</html>
